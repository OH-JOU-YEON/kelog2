<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spring.persistence.TravelPostMapper">

 <!--  작성자 추가 해야함 -->
<insert id="insert">
	INSERT INTO travelpost (title, content) VALUES(#{title},#{content});
</insert>

<select id="read">
	SELECT * FROM travelpost WHERE travelBoardNo = #{travelBoardNo}
</select>

<update id="update">
	UPDATE travelpost SET title = #{title}, content = #{content} WHERE travelBoardNo = #{travelBoardNo}
</update>

</mapper>
  

